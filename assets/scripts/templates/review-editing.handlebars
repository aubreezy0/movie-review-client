<form id="edit-review">
  <label><input type="text" name="id" value="{{rating.id}}" style="display:none"></label>
  <label>Movie title: <input type="text" name="movie_rating[movie_title]" value="{{rating.movie_title}}"></label>
  <label>Genre: <input type="text" name="movie_rating[movie_genre]" value="{{rating.movie_genre}}"></label>
  <label>Rating: <input type="text" name="movie_rating[rating]" value="{{rating.rating}}"></label>
  <label>Review: <textarea name="movie_rating[review]">{{rating.review}}</textarea></label>
  <label>Date Seen: <input type="date" name="movie_rating[date_watched]" value="{{rating.date_watched}}"></label>
  <input type="submit">
</form>
